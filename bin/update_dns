#!/bin/sh

CREDENTIALS="${HOME}/.update_dns.conf"
MAILINABOX="${1}"
RECORD="${2}"
# shellcheck disable=SC2034
HCUUID="${3}"

# shellcheck source=lib/healthchecks.io.sh
. "$(dirname "${0}")/../lib/healthchecks.io.sh"
# shellcheck source=/dev/null
. "${CREDENTIALS}"

hc_start ""
if curl -s -X PUT --user "${USER}:${PASS}" "${MAILINABOX}/admin/dns/custom/${RECORD}" > /dev/null; then
    hc_success ""
else
    hc_fail ""
fi
